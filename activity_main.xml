<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/linid"
    android:paddingBottom="4dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:text="@string/heading"
        android:textAlignment="center"
        android:textColor="#E84D4D"
        android:textSize="70sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_wg"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:ems="16"
        android:hint="@string/hint_wg"
        android:importantForAutofill="no"
        android:inputType="number"
        android:paddingTop="2dp"
        android:textColor="@color/black"
        android:textColorHint="#f00"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edit_htF"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:ems="16"
        android:hint="@string/hint_htF"
        android:importantForAutofill="no"
        android:inputType="number"
        android:paddingBottom="2dp"
        android:textColor="@color/black"
        android:textColorHint="#f00"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edit_htI"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginTop="2dp"
        android:ems="16"
        android:hint="@string/hint_htI"
        android:importantForAutofill="no"
        android:inputType="number"
        android:paddingBottom="2dp"
        android:textColor="@color/black"
        android:textColorHint="#f00"
        android:textSize="22sp" />

    <Button
        android:id="@+id/calculate_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#3BE51F"
        android:padding="15dp"
        android:text="@string/text_button"
        android:textColor="#A62499"
        android:textSize="22sp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/resultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_result"
        android:textColor="#f00"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="5dp"/>

</LinearLayout>